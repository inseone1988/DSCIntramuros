<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".restricted_consult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:src="@drawable/dhl_simple" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="@string/vetado_consult_title"
            android:textColor="@color/dsc_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/dsc_gray"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/round_corners"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/go_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/search_type_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:checkedButton="@+id/by_person"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/by_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/by_name" />

            <RadioButton
                android:id="@+id/by_provider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/by_provider" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_vetados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dsc_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/no_data"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/maps_and_flags" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_data"
            android:text="@string/start_new_search_prompt" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/vetados_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:visibility="gone">
</android.support.v7.widget.RecyclerView>

</LinearLayout>