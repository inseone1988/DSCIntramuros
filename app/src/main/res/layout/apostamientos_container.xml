<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/ap_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/apRlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/dsc_gray">

            <TextView
                android:id="@+id/place_no_of_items"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@drawable/textviewborders"
                android:paddingLeft="11dp"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/place_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/place_no_of_items"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/client_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dsc_accent"
        android:textDirection="rtl">

    </ListView>
</LinearLayout>