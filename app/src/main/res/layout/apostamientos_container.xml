<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/ap_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/dsc_accent">

        <RelativeLayout
            android:id="@+id/apRlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dsc_gray">

            <TextView
                android:id="@+id/place_no_of_items"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/textviewborders"
                android:paddingLeft="16dp"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/place_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/place_no_of_items"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ap_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_client_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/place_no_of_items"
                android:text="@string/exampletext" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/client_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dsc_accent"
        android:textDirection="rtl">

    </ListView>
</LinearLayout>